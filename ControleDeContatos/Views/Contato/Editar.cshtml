@model ContatoModels
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Editar">
    <input type="hidden" name="id" value="@Model.id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato" asp-for="Nome" value="@Model.Nome">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" placeholder="Digite o email do contato" asp-for="Email" value="@Model.Email">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato" asp-for="Celular" value="@Model.Celular">
    </div>
    <br />

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary d-grid gap-2" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
</form>