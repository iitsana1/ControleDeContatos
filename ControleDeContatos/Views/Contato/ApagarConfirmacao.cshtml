@model ContatoModels
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Deseja realmente apagar contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.id">Confirmar Exclusão</a>
</div>